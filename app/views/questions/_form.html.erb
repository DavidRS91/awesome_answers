
<%= form_for @question do |f| %>
<%# ☝🏻 tells rails we want a new form for our Question class %>
<% if @question.errors.present? %>
  <p><%= @question.errors.full_messages.join(', ') %></p>
  <% end %>
<div class="">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
</div>

<div class="">
  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control" %>
</div>

<div class="">
  <%= f.label :tag_ids, "Tags" %>
  <%= f.collection_select(
    :tag_ids,
    Tag.order(name: :asc),
     :id,
    :name,
    {},
    {multiple: true, class: 'chosen-select'}
    ) %>
</div>

<%= f.submit %>

<% end %>
